@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/ChangePassword.css">
    <title>Project6</title>
</head>

<body>
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-7 ml-3 p-0">
                <a class="navbar-brand float-right mr-sm-5  mr-md-5 mr-lg-5" asp-controller="Home" asp-action="Index">
                    <img class="mr-sm-2 mr-md-3 mr-lg-5" src="~/images/home/logo455.jpg" alt="Logo" style="width:70px;">
                </a>
            </div>
            <div class="col-4 p-0">
                <p class="mt-3 font-weight-bold text2 "><a class="text-dark " href="~/User/Login">Присоединиться</a></p>
            </div>
        </div>
    </div>
    <hr>
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-12 ">
                <p class="text-center text3 mb-2 font-weight-bold ">
                    Изменить пароль
                </p>
            </div>
            <div class="col-12">
                <form action="~/User/ForgotPasswordUser" method="post">

                    <div class="form-group">
                        <input type="password" name="Password" class="form-control   mx-auto forms mt-4" placeholder="новый пароль" id="email">
                    </div>
                    <div class="form-group">
                        <input type="password" name="ConfirmPassword" class="form-control  mx-auto forms" placeholder="подтвердите новый пароль" id="pwd">
                   <input type="hidden" value="@ViewBag.Code" name="SixCode">
                    </div>
                   
                    <input type="submit" class="btn   mx-auto d-block font-weight-bold" value="сохранить">



                </form>
                
            </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>

</html>